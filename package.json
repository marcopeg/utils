{
  "name": "@marcopeg/utils",
  "version": "2.0.0",
  "description": "Javascript utils for server and client projects",
  "main": "index.js",
  "scripts": {
    "go": "npm run build && npm publish --access public .",
    "----- // BUILD // -----": "",
    "build:lib": "./node_modules/babel-cli/bin/babel.js src-lib --out-dir lib",
    "build:bin": "./node_modules/babel-cli/bin/babel.js src-bin --out-dir bin",
    "build": "npm run build:lib && npm run build:bin",
    "----- // START // -----": "",
    "start:lib": "./node_modules/babel-cli/bin/babel.js --watch src-lib --out-dir lib",
    "start:bin": "./node_modules/babel-cli/bin/babel.js --watch src-bin --out-dir bin",
    "start": "./node_modules/.bin/concurrently \"npm run start:lib\" \"npm run start:bin\"",
    "----- // START:TO // -----": "",
    "start:to:lib": "node_modules/babel-cli/bin/babel.js --watch src-lib --out-dir \"$TARGET\"node_modules/@marcopeg/utils/lib",
    "start:to:bin": "node_modules/babel-cli/bin/babel.js --watch src-bin --out-dir \"$TARGET\"node_modules/@marcopeg/utils/bin",
    "start:to": "./node_modules/.bin/concurrently \"npm run start:to:lib\" \"npm run start:to:bin\""
  },
  "babel": {
    "presets": [
      "es2015",
      "es2017"
    ],
    "plugins": [
      "transform-object-rest-spread",
      "transform-react-jsx",
      [
        "transform-runtime",
        {
          "polyfill": false,
          "regenerator": true
        }
      ]
    ]
  },
  "author": "Marco Pegoraro",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcopeg/utils.git"
  },
  "bugs": {
    "url": "https://github.com/marcopeg/utils/issues"
  },
  "homepage": "https://github.com/marcopeg/utils#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "concurrently": "^4.1.0"
  },
  "dependencies": {
    "babel-runtime": "^6.26.0"
  }
}
